modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Setup Project"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Project"

[[workflows.workflow]]
name = "Setup Project"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python setup.py"

[[workflows.workflow]]
name = "Run Project"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run.py"

[deployment]
run = ["sh", "-c", "python setup.py"]

[[ports]]
localPort = 8081
externalPort = 80
